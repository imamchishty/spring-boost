<archetype-descriptor name="mavenful-archetype" partial="true">

    <fileSets>

        <!--Create parent/main directory-->
        <fileSet filtered="true" encoding="UTF8">
            <directory></directory>
            <includes>
                <include>pom.xml</include>
                <include>run.sh</include>
                <include>plugin.sh</include>
                <include>README.txt</include>
                <include>.gitignore</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory></directory>
            <includes>
                <include>pom.xml</include>
                <include>src/main/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/main</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/main/java/__packageInPathFormat__</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/main/resources</directory>
            <includes>
                <include>application.yml</include>
                <include>banner.txt</include>
                <include>bootstrap.yml</include>
                <include>git.properties</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/test/java/__packageInPathFormat__</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="false" encoding="UTF8">
            <directory>src/test/jmeter</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF8">
            <directory>src/site</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>


        <!-- Create cloud servers directory-->
        <fileSet filtered="true" encoding="UTF8">
            <directory>cloud-servers</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

    </fileSets>

</archetype-descriptor>